<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="stylesheets/styles.css">
    

    <title>Criar Nova Conta</title>
  </head>
  <body>
    <div class="text-center center-div" id=login>
        <div class="container w-50 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Forneça os seus dados</h2>
            </div>
            <form action="/nova_conta" method='post' class="pt-3">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nome" name="name">
                </div>
                <br>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="E-mail" name="email" value="">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Telefone" name="phone">
                </div>
                <br>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Senha">
                </div>
                <br>

                <div class="form-group">
                    <label for="business">Conta de Empresa</label>
                    <input type="checkbox" name="business" onclick="verifyBusiness(this);"/>
                </div>
                <br>

                <div id="personal_account">
                    <div class="form-group">
                        <input type="text" class="form-control" name="cpf" placeholder="CPF" maxlength="11" minlength="11">
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="birthday">Data de Nascimento</label>
                        <input type="date" class="form-control" name="birthday">
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="admin">Conta de Administrador</label>
                        <input type="checkbox" name="admin" onclick="verifyAdm(this);"/>
                    </div>
                    <br>
                </div>

                <div class='d-none' id="business_account">
                    <div class="form-group">
                        <input type="text" class="form-control" name="cnpj" placeholder="CNPJ" maxlength="14" minlength="14">
                    </div>
                    <br>
                </div>

                <div class="d-none" id="divADM">
                    <div class="form-group">
                        <input type="text" class="form-control" name="rg" placeholder="RG" maxlength="9" minlength="9">
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="password">Digite a senha de Administrador:</label>
                        <input type="password" name="passwordADM"/>
                    </div>
                    <br>
                </div>

                <div id="notADM">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Rua" name="street">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Bairro" name="district">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Número" name="number">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Complemento" name="complement">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Cidade" name="city">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Estado" name="state">
                    </div>
                    <br>
                </div>
                <button type="submit" class="btn btn-success rounded-pill">Criar</button>
                <br>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script type="text/javascript">
        function verifyAdm(cbox) {
            if(cbox.checked) {
                $('#divADM').removeClass('d-none');
                $('#notADM').addClass('d-none');
            }else{
                $('#divADM').addClass('d-none');
                $('#notADM').removeClass('d-none');
                $('input[name="passwordADM"]').val('');
            }
        }

        function verifyBusiness(cbox) {
            if(cbox.checked) {
                $('#business_account').removeClass('d-none');
                $('#personal_account').addClass('d-none');
            }else{
                $('#business_account').addClass('d-none');
                $('#personal_account').removeClass('d-none');
                $('input[name="cnpj"]').val('');
            }
        }
    </script>
  </body>
</html>