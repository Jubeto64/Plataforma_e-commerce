<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Criar Nova Conta</title>
    <script type="text/javascript">
        function dynInput(cbox) {
            if(cbox.checked) {
                var input = document.createElement("input");
                input.type = "text";
                var div = document.createElement("div");
                div.id = cbox.name;
                div.innerHTML = "Digite a senha de Administrador: ";
                div.appendChild(input);
                document.getElementById("insertinputs").appendChild(div);
            }else{
                document.getElementById(cbox.name).remove();
            }
        }
    </script>
  </head>
  <body>
    <div class="text-center center-div" id=login>
        <div class="container w-50 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Forne√ßa os seus dados</h2>
            </div>
            <form action="/nova_conta" method='post' class="pt-3">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nome" name="name">
                </div>
                <br>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="E-mail" name="email" value="">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Telefone" name="phone">
                </div>
                <br>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Senha">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" name="cpf" placeholder="CPF">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" name="rg" placeholder="RG">
                </div>
                <br>
                <div class="form-group">
                    <label for="birthday">Data de Nascimento</label>
                    <input type="date" class="form-control" name="birthday">
                </div>
                <br>
                <div class="form-group">
                    <label for="admin">Conta de Administrador</label>
                    <input type="checkbox" name="admin" onclick="dynInput(this);"/>
                </div>
                <br>
                <div class="form-group">
                    <p id="insertinputs" name="passwordADM"></p>
                </div>
                <br>
                <button type="submit" class="btn btn-success rounded-pill">Criar</button>
                <br>
            </form>
        </div>
    </div>
  </body>
</html>