<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Criar Nova Conta</title>
  </head>
  <body>
    <div class="text-center center-div" id=login>
        <div class="container w-50 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Forne√ßa os seus dados</h2>
            </div>
            <form action="/nova_conta" method='post' class="pt-3">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nome" name="name">
                </div>
                <br>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="E-mail" name="email" value="">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Telefone" name="phone">
                </div>
                <br>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Senha">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" name="cpf" placeholder="CPF">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" name="rg" placeholder="RG">
                </div>
                <br>
                <div class="form-group">
                    <label for="birthday">Data de Nascimento</label>
                    <input type="date" class="form-control" name="birthday">
                </div>
                <br>
                <div class="form-group">
                    <label for="admin">Conta de Administrador</label>
                    <input type="checkbox" name="admin" onclick="dynInput(this);"/>
                </div>
                <br>
                <div class="form-group d-none" id="divPasswordADM">
                    <label for="password">Digite a senha de Administrador:</label>
                    <input type="password" name="passwordADM"/>
                </div>
                <br>
                <button type="submit" class="btn btn-success rounded-pill">Criar</button>
                <br>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script type="text/javascript">
        function dynInput(cbox) {
            if(cbox.checked) {
                $('#divPasswordADM').removeClass('d-none');
            }else{
                $('#divPasswordADM').addClass('d-none');
                $('input[name="passwordADM"]').val('');
            }
        }
    </script>
  </body>
</html>